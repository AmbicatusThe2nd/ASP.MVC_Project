@{
    ViewData["Title"] = "DrugiKorak";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Drugi korak registracije</h1>

@using (Html.BeginForm("DrugiKorak", "Registracija", FormMethod.Post))
{
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label text-white">Naslov</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputName" placeholder="Naslov" name="Naslov">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPriimek" class="col-sm-2 col-form-label text-white">Poštna Številka</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="inputPriimek" placeholder="Postal Code" name="Postna">
        </div>
    </div>
    <div class="from-group row">
        <label for="datepicker" class="col-sm-2 col-form-label text-white">Pošta</label>
        <div class="col-sm-10">
            <input type="text" name="Posta"/>
        </div>
    </div>
    <div class="from-group row">
        <label for="emso" class="col-sm-2 col-form-label text-white">Država</label>
        <div class="col-sm-10">
            <input type="text" name="Drzava" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-outline-primary" value="Naprej">
        </div>
    </div>
}

