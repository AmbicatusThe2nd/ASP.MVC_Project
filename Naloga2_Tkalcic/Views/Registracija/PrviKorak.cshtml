@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Prvi korak registracije</h1>

@using (Html.BeginForm("Index", "Registracija", FormMethod.Post))
{
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label text-white">Ime</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputName" placeholder="Ime" name="Ime">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPriimek" class="col-sm-2 col-form-label text-white">Priimek</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="inputPriimek" placeholder="Priimek" name="Priimek">
        </div>
    </div>
    <div class="from-group row">
        <label for="datepicker" class="col-sm-2 col-form-label text-white">Rojstni datum</label>
        <div class="col-sm-10">
            <input type="text" id="datepicker" name="Datum" />
        </div>
    </div>
    <div class="from-group row">
        <label for="emso" class="col-sm-2 col-form-label text-white">EMSO</label>
        <div class="col-sm-10">
            <input type="text" id="emso" name="Emso"/>
        </div>
    </div>
    <div class="from-group row">
        <label for="slider" class="col-sm-2 col-form-label text-white">Starost</label>
        <div class="col-sm-10">
            <div id="slider">
                <div id="custom-handle" class="ui-slider-handle"></div>
            </div>
            <div>
                <input type="number" id="spreminjanje" name="Starost" />
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-outline-primary" value="Naprej">
        </div>
    </div>
}

