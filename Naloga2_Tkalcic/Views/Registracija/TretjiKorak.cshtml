
@{
    ViewData["Title"] = "TretjiKorak";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tretji Korak Registracije</h1>

@using (Html.BeginForm("TretjiKorak", "Registracija", FormMethod.Post))
{
    <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label text-white">E-Pošta</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="inputEmail" placeholder="E-Pošta" name="EPosta">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPriimek" class="col-sm-2 col-form-label text-white">Geslo</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="inputPriimek" placeholder="Geslo" name="Geslo">
        </div>
    </div>
    <div class="from-group row">
        <label for="drugoGeslo" class="col-sm-2 col-form-label text-white">Ponovitev Gesla</label>
        <div class="col-sm-10">
            <input type="password" id="drugoGeslo" class="form-control small" placeholder="Ponovitev Gesla" name="GesloDva" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <input type="submit" class="btn btn-outline-primary" value="Končaj">
        </div>
    </div>
}